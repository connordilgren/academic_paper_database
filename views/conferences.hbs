<!-- conferences.hbs -->

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<h2>Conferences Table</h2>

{{!-- Create a table --}}
<table id="Conferences-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the attributes, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.conferenceID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.year}}</td>
            <td>{{this.city}}</td>
            <td>{{this.country}}</td>
            <td>{{this.isOnline}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- /views/conferences.hbs -->

{{!-- Form to add a record to the table  --}}
<form id="add-conferences-form-ajax">
    <legend>Add Conference</legend>

    <label for="input-cname">Conference Name: </label>
    <input type="text" name="input-cname" id="input-cname" required>

    <label for="input-year">Year: </label>
    <input type="number" name="input-year" id="input-year" required>

    <label for="input-city">City: </label>
    <input type="text" name="input-city" id="input-city">

    <label for="input-country">Country: </label>
    <input type="text" name="input-country" id="input-country">

    <label for="input-isOnline">Is this conference online: </label>
    <select name="input-isOnline" id="input-isOnline">
        <option value=""></option>
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_conference.js"></script>

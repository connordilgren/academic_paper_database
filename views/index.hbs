<!-- index.hbs -->
<h1>The server is running!</h1>
<p>If you see this text, the server is <strong>definitely</strong> working!</p>

{{!-- Create a table --}}
<table id="Authors-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the attributes, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.authorID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.middleName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.websiteURL}}</td>
            <td>{{this.isRetired}}</td>
            <td>{{this.hIndex}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- /views/index.hbs -->

{{!-- Form to add a record to the table  --}}
<h2>Adding Data with AJAX</h2>
<p>To add a new author, please enter their information below and click 'Submit'!</p>
<form id="add-author-form-ajax">
    <legend>Add Author</legend>

    <label for="input-fname">First Name: </label>
    <input type="text" name="input-fname" id="input-fname">

    <label for="input-mname">Middle Name: </label>
    <input type="text" name="input-mname" id="input-mname">

    <label for="input-lname">Last Name: </label>
    <input type="text" name="input-lname" id="input-lname">

    <label for="input-email">Email Address: </label>
    <input type="email" name="input-email" id="input-email">

    <label for="input-website">Website URL: </label>
    <input type="url" name="input-website" id="input-website">

    <label for="input-isRetired">Is this author retired: </label>
    <input list="isRetired">
        <datalist id="isRetired">
            <option value="Yes">
            <option value="No">
        </datalist>

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_author.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

{{!-- Create a table --}}
<table id="AuthorOrganizations-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the attributes, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.authorOrganizationID}}</td>
            <td>{{this.organizationName}}</td>
            <td>{{this.authorLastName}}</td>
            <td>{{this.authorstartDate}}</td>
            <td>{{this.authorEndDate}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

